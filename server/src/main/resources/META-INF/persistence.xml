<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="tmpu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>    
    <class>ru.terra.terramarket.db.entity.Waybill</class>
    <class>ru.terra.terramarket.db.entity.User</class>
    <class>ru.terra.terramarket.db.entity.Groups</class>
    <class>ru.terra.terramarket.db.entity.Sells</class>
    <class>ru.terra.terramarket.db.entity.WaybillItem</class>
    <class>ru.terra.terramarket.db.entity.Store</class>
    <class>ru.terra.terramarket.db.entity.SellsItem</class>
    <class>ru.terra.terramarket.db.entity.Product</class>
    <class>ru.terra.terramarket.db.entity.Photo</class>
    <class>ru.terra.terramarket.db.entity.Users</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/terramarket"/>
      <property name="javax.persistence.jdbc.password" value="to"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="to"/>
<property name="eclipselink.ddl-generation" value="create-tables"/>
    </properties>
  </persistence-unit>
</persistence>
